        "@types/jest": "^28.1.5",
        "@types/node": "^16.11.7",
        "eslint": "^8.2.0",
        "jest": "^28.1.3",
        "prettier": "^2.4.1",
        "ts-jest": "^28.0.5",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    }
