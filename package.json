{
    "name": "@js-soft/ts-utils",
    "version": "1.2.0",
    "description": "Typescript Utils",
    "homepage": "https://js-soft.com/",
    "repository": "github:js-soft/typescript-utils",
    "license": "MIT",
    "author": "j&s-soft GmbH",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist/",
        "README.md"
    ],
    "scripts": {
